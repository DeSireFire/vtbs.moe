{
  "root": true,
  "env": {
    "node": true,
    "es2020": true,
  },
  "extends": [
    "plugin:vue/essential",
    "@vue/standard"
  ],
  "rules": {
    "space-before-function-paren": "off",
    "comma-dangle": ["error", "always-multiline"]
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "parser": "babel-eslint"
  }
}
